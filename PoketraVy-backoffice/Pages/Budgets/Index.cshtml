}

<h1>Index</h1>

<p>
    <a asp-page="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Budget[0].Remarque)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Budget[0].Montant)
            </th>
            <th>
                Date
            </th>
