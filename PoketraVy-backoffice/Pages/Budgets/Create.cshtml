@page
@model PoketraVy_backoffice.Pages.Budgets.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Budget</h4>
<hr />
<form method="post">
    <div class="row">
        <div class="col-md-4">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Budget.Montant" class="control-label"></label>
                <input asp-for="Budget.Montant" class="form-control" />
                <span asp-validation-for="Budget.Montant" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Budget.Daty" class="control-label"></label>
                <input asp-for="Budget.Daty" class="form-control" />
                <span asp-validation-for="Budget.Daty" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Budget.DatyFinPrevisionnel" class="control-label"></label>
                <input asp-for="Budget.DatyFinPrevisionnel" class="form-control" />
                <span asp-validation-for="Budget.DatyFinPrevisionnel" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Budget.Remarque" class="control-label"></label>
                <input asp-for="Budget.Remarque" class="form-control" />
                <span asp-validation-for="Budget.Remarque" class="text-danger"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="row">
            <h3>Utilisateur Budgets</h3>
        </div>
        <div id="utilisateurBudgets" class="row">
            @for (int i = 0; i < Model.UtilisateurBudgets.Count; i++)
            {
                <div class="row">
                    <div class="form-group col-3">
                        <label asp-for="UtilisateurBudgets[i].Utilisateur.Username"></label>
                        <input asp-for="UtilisateurBudgets[i].Utilisateur.Username" class="form-control" readonly />
                        <input asp-for="UtilisateurBudgets[i].Utilisateur.ID" class="form-control" type="hidden" />
                    </div>
                    <div class="form-group col-3">
                        <label asp-for="UtilisateurBudgets[i].Montant"></label>
                        <input asp-for="UtilisateurBudgets[i].Montant" class="form-control" />
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="UtilisateurBudgets[i].Remarque"></label>
                        <input asp-for="UtilisateurBudgets[i].Remarque" class="form-control" />
                    </div>
                </div>
            }
        </div>
        <div class="form-group">
            <input type="submit" value="Create" class="btn btn-primary" />
        </div>
    </div>
</form>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
