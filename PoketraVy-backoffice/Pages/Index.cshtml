@page
@model IndexModel
@{
    ViewData["Title"] = "Index";
}

@if (User.Identity.IsAuthenticated)
{
    <script>
        window.location.href = '/Budgets/';
    </script>
}
<section class="form-signin w-100 mx-auto mt-5">
    <form method="post">
        <div class="row">
            <svg xmlns="http://www.w3.org/2000/svg" width="72" height="72" fill="currentColor" class="bi bi-bank mb-4" viewBox="0 0 16 16">
                <path d="m8 0 6.61 3h.89a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5H15v7a.5.5 0 0 1 .485.38l.5 2a.498.498 0 0 1-.485.62H.5a.498.498 0 0 1-.485-.62l.5-2A.5.5 0 0 1 1 13V6H.5a.5.5 0 0 1-.5-.5v-2A.5.5 0 0 1 .5 3h.89zM3.777 3h8.447L8 1zM2 6v7h1V6zm2 0v7h2.5V6zm3.5 0v7h1V6zm2 0v7H12V6zM13 6v7h1V6zm2-1V4H1v1zm-.39 9H1.39l-.25 1h13.72z" />
            </svg>
        </div>
        <h1 class="h3 mb-3 fw-normal">Veuillez vous connecter</h1>

        <div class="form-floating">
            <input asp-for="Input.Username" class="form-control" placeholder="username">
            <label asp-for="Input.Username">Username</label>
            <span asp-validation-for="Input.Username" class="text-danger"></span>
        </div>
        <div class="form-floating">
            <input type="password" asp-for="Input.Password" class="form-control" placeholder="Password">
            <label asp-for="Input.Password"></label>
            <span asp-validation-for="Input.Password" class="text-danger"></span>
        </div>
        <div class="form-check text-start my-1">
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>

        <button class="btn btn-primary w-100 py-2" type="submit">Login</button>
    </form>
</section>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}