@page
@model PoketraVy_backoffice.Pages.UtilisateurBudgets.IndexModel

@{
    ViewData["Title"] = "Index";
}

<h1>Budget Utilisateur</h1>

<p>
    <a asp-page="Create"><i class="bi bi-plus-circle-dotted"></i> Creer</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.UtilisateurBudget[0].IdUtilisateur)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UtilisateurBudget[0].IdBudget)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UtilisateurBudget[0].Montant)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UtilisateurBudget[0].Remarque)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.UtilisateurBudget) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IdUtilisateur)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdBudget)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Montant)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Remarque)
            </td>
            <td>
                    <a asp-page="./Edit" asp-route-id="@item.ID"><i class="bi bi-pen"></i> Modif</a> |
                    <a asp-page="./Details" asp-route-id="@item.ID"><i class="bi bi-credit-card-2-front"></i> Details</a> |
                    <a asp-page="./Delete" asp-route-id="@item.ID"><i class="bi bi-trash"></i> Supprimer</a>
            </td>
        </tr>
}
    </tbody>
</table>
